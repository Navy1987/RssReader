/**index.wxss**/
@import "../common/ui.wxss";

.chapter-item, .chapter-item-select {
  border:3px;
  border-radius: 2px;
  min-height:60px;

  padding-top:10px;
  padding-bottom:10px;
  padding-left:10px;
  padding-right:5px;

  background:white;
  flex-direction: column;
  
  display:flex;
}

.chapter-item {
  margin-bottom:1px;
}

.chapter-item-select {
  margin-bottom:1px;
  transform: scale(0.98);  
}

.-ui-title {
  font-size:13px;
}

.-ui-subtitle {
  font-size:10px;
}